<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
<name>Content - JExtBOX Article Status</name>
<author>Galaa</author>
<creationDate>2012-10-21</creationDate>
<copyright>Copyright (C) 2011-2012 Galaa (galaa.mn)</copyright>
<license>http://www.gnu.org/licenses/gpl.html</license>
<authorEmail>contact@galaa.mn</authorEmail>
<authorUrl>http://galaa.mn/</authorUrl>
<version>3.0.0</version>
<description>This plugin displays status (Just added, Modified, Featured, Popular, Most hit and Archived) sign before article. HTML code is allowed in status message, and you can choise default nice status icons or replace. Copyright (C) 2012 Galaa (http://galaa.mn/). All rights reserved.</description>
<files>
	<filename plugin="jextboxarticlestatus">jextboxarticlestatus.php</filename>
	<filename>index.html</filename>
	<folder>images</folder>
</files>
<languages folder="language">
	<language tag="en-GB">en-GB/en-GB.plg_content_jextboxarticlestatus.ini</language>
	<language tag="en-GB">en-GB/en-GB.plg_content_jextboxarticlestatus.sys.ini</language>
</languages>
<updateservers>
	<server type="extension" priority="2" name="JExtBOX Article Status - Updates">http://jextbox.com/updates/jextboxarticlestatus.xml</server>
</updateservers>
<config>
	<fields name="params">
		<fieldset name="basic">
			<field name="within_a_div" type="list" default="no" label="JEXTBOX_WITHIN_A_DIV" description="JEXTBOX_WITHIN_A_DIV_DESC" >
  				<option value="yes">JEXTBOX_OPTION_YES</option>
  				<option value="no">JEXTBOX_OPTION_NO</option>
  			</field>
			<field name="class_or_id" type="list" default="id" label="JEXTBOX_CLASS_OR_ID" description="JEXTBOX_CLASS_OR_ID_DESC" >
  				<option value="class">JEXTBOX_OPTION_CLASS</option>
  				<option value="id">JEXTBOX_OPTION_ID</option>
  			</field>
			<field name="div_name" type="text" default="jextboxarticlestatus" label="JEXTBOX_DIV" description="JEXTBOX_DIV_DESC" />
			<field name="div_style" type="text" default="position:relative; top:-18px; left:6px;" size="30" label="JEXTBOX_DIV_STYLE" description="JEXTBOX_DIV_STYLE_DESC" />
			<field name="categories" type="category" extension="com_content" multiple="true" size="10" default="" label="JEXTBOX_CATS" description="JEXTBOX_CATS_DESC" />
			<field name="categories_option" type="list" default="exclude" label="JEXTBOX_CATS_OPT" description="JEXTBOX_CATS_OPT_DESC" >
  				<option value="exclude">JEXTBOX_OPTION_EXCLUDE</option>
  				<option value="include">JEXTBOX_OPTION_INCLUDE</option>
  			</field>
			<field name="articles" type="text" default="" size="30" label="JEXTBOX_ART" description="JEXTBOX_ART_DESC" />
			<field name="articles_option" type="list" default="exclude" label="JEXTBOX_ART_OPT" description="JEXTBOX_ART_OPT_DESC" >
  				<option value="exclude">JEXTBOX_OPTION_EXCLUDE</option>
  				<option value="include">JEXTBOX_OPTION_INCLUDE</option>
  			</field>
			<field name="show_in_full_view" type="list" default="yes" label="JEXTBOX_SHOW_IN_FULL_VIEW" description="JEXTBOX_SHOW_IN_FULL_VIEW_DESC" >
  				<option value="yes">JEXTBOX_OPTION_YES</option>
  				<option value="no">JEXTBOX_OPTION_NO</option>
  			</field>
			<field name="show_in_featured_view" type="list" default="yes" label="JEXTBOX_SHOW_IN_FEATURED_VIEW" description="JEXTBOX_SHOW_IN_FEATURED_VIEW_DESC" >
  				<option value="yes">JEXTBOX_OPTION_YES</option>
  				<option value="no">JEXTBOX_OPTION_NO</option>
  			</field>
			<field name="show_in_category_view" type="list" default="yes" label="JEXTBOX_SHOW_IN_CATEGORY_VIEW" description="JEXTBOX_SHOW_IN_CATEGORY_VIEW_DESC" >
  				<option value="yes">JEXTBOX_OPTION_YES</option>
  				<option value="no">JEXTBOX_OPTION_NO</option>
  			</field>
			<field name="sign" type="list" default="default" label="JEXTBOX_SIGN" description="JEXTBOX_SIGN_DESC" >
  				<option value="default">JEXTBOX_OPTION_DEFAULT</option>
  				<option value="custom">JEXTBOX_OPTION_CUSTOM</option>
  			</field>
			<field name="days" type="text" default="7" size="30" label="JEXTBOX_DAYS" description="JEXTBOX_DAYS_DESC" />
			<field name="identify_new" type="list" default="yes" label="JEXTBOX_IDENTIFY_NEW" description="JEXTBOX_IDENTIFY_NEW_DESC" >
  				<option value="yes">JEXTBOX_OPTION_YES</option>
  				<option value="no">JEXTBOX_OPTION_NO</option>
  			</field>
			<field name="sign_new_custom" type="text" size="30" default="Just Added" label="JEXTBOX_SIGN_NEW_CUSTOM" description="JEXTBOX_SIGN_NEW_CUSTOM_DESC" />
			<field name="identify_modified" type="list" default="yes" label="JEXTBOX_IDENTIFY_MODIFIED" description="JEXTBOX_IDENTIFY_MODIFIED_DESC" >
  				<option value="yes">JEXTBOX_OPTION_YES</option>
  				<option value="no">JEXTBOX_OPTION_NO</option>
  			</field>
			<field name="sign_modified_custom" type="text" size="30" default="Modified" label="JEXTBOX_SIGN_MODIFIED_CUSTOM" description="JEXTBOX_SIGN_MODIFIED_CUSTOM_DESC" />
			<field name="identify_featured" type="list" default="yes" label="JEXTBOX_IDENTIFY_FEATURED" description="JEXTBOX_IDENTIFY_FEATURED_DESC" >
  				<option value="yes">JEXTBOX_OPTION_YES</option>
  				<option value="no">JEXTBOX_OPTION_NO</option>
  			</field>
			<field name="sign_featured_custom" type="text" size="30" default="Featured" label="JEXTBOX_SIGN_FEATURED_CUSTOM" description="JEXTBOX_SIGN_FEATURED_CUSTOM_DESC" />
			<field name="identify_archived" type="list" default="yes" label="JEXTBOX_IDENTIFY_ARCHIVED" description="JEXTBOX_IDENTIFY_ARCHIVED_DESC" >
  				<option value="yes">JEXTBOX_OPTION_YES</option>
  				<option value="no">JEXTBOX_OPTION_NO</option>
  			</field>
			<field name="sign_archived_custom" type="text" size="30" default="Archived" label="JEXTBOX_SIGN_ARCHIVED_CUSTOM" description="JEXTBOX_SIGN_ARCHIVED_CUSTOM_DESC" />
			<field name="identify_hit" type="list" default="yes" label="JEXTBOX_IDENTIFY_HIT" description="JEXTBOX_IDENTIFY_HIT_DESC" >
  				<option value="yes">JEXTBOX_OPTION_YES</option>
  				<option value="no">JEXTBOX_OPTION_NO</option>
  			</field>
			<field name="sign_hit_custom" type="text" size="30" default="Most Hit" label="JEXTBOX_SIGN_HIT_CUSTOM" description="JEXTBOX_SIGN_HIT_CUSTOM_DESC" />
			<field name="sign_hit_limit" type="list" default="0.9" label="JEXTBOX_SIGN_HIT_LIMIT" description="JEXTBOX_SIGN_HIT_LIMIT_DESC" >
  				<option value="0.95">JEXTBOX_OPTION_95</option>
  				<option value="0.9">JEXTBOX_OPTION_90</option>
  				<option value="0.85">JEXTBOX_OPTION_85</option>
  				<option value="0.75">JEXTBOX_OPTION_75</option>
  				<option value="0.6">JEXTBOX_OPTION_60</option>
  			</field>
			<field name="identify_popular" type="list" default="yes" label="JEXTBOX_IDENTIFY_POPULAR" description="JEXTBOX_IDENTIFY_POPULAR_DESC" >
  				<option value="yes">JEXTBOX_OPTION_YES</option>
  				<option value="no">JEXTBOX_OPTION_NO</option>
  			</field>
			<field name="sign_popular_custom" type="text" size="30" default="Popular" label="JEXTBOX_SIGN_POPULAR_CUSTOM" description="JEXTBOX_SIGN_POPULAR_CUSTOM_DESC" />
			<field name="sign_popular_limit" type="list" default="0.75" label="JEXTBOX_SIGN_POPULAR_LIMIT" description="JEXTBOX_SIGN_POPULAR_LIMIT_DESC" >
  				<option value="0.9">JEXTBOX_OPTION_90</option>
  				<option value="0.85">JEXTBOX_OPTION_85</option>
  				<option value="0.75">JEXTBOX_OPTION_75</option>
  				<option value="0.6">JEXTBOX_OPTION_60</option>
				<option value="0.5">JEXTBOX_OPTION_50</option>
  			</field>
		</fieldset>
	</fields>
</config>
</extension>
